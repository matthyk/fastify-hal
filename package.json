{
  "name": "fastify-hal",
  "version": "0.1.0",
  "description": "A Fastify plugin for API development based on the HAL hypermedia format",
  "main": "dist/plugin.js",
  "scripts": {
    "test": "jest --config jest.config.js",
    "format": "prettier --write \"src/**/*.ts\" \"__test__/**/*.ts\" \"benchmarks/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "ts-node --files --transpile-only example/index.ts"
  },
  "keywords": [
    "REST",
    "HTTP",
    "API",
    "Hypermedia",
    "HAL",
    "Fastify",
    "Plugin"
  ],
  "author": "Matthias Keckl",
  "license": "MIT",
  "devDependencies": {
    "@types/benchmark": "^2.1.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "fastify": "^3.27.1",
    "jest": "^27.5.1",
    "pino-pretty": "^7.5.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "fastify-sensible": "^3.1.2"
  },
  "dependencies": {
    "@sindresorhus/fnv1a": "^2.0.1",
    "deepmerge": "^4.2.2",
    "fastify-plugin": "^3.0.1"
  }
}
